<h2>Contests</h2>

<%= link_to 'New Contest', new_contest_path, :class => 'btn btn-success' %>

<div class="row">
  <div class="col-sm-12">
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
          <tr>
            <th>Date</th>
            <th>Contest</th>
            <th>Winner</th>
          </tr>
          </thead>
        <tbody>
        	<% @contests.each do |t| %>
            <tr>
  		        <td><%= t.created_at.strftime("%B %d, %Y") %></td>
              <td><%= t.away_contestant %> vs. <%= t.home_contestant %></td>
              <% if t.winner.nil? %>
  		          <td>Pending Winner</td>
              <% else %>
                <td><%= t.winner %></td>
              <% end %>
            </tr>
		      <% end %>
        </tbody>
       	</table>
       </div>
       <%= will_paginate @contests %>
    </div>
</div>

<%= link_to 'New Contest', new_contest_path, :class => 'btn btn-success' %>